#Sequence record: handles requests to the device.

record(seq, "$(P)Seq"){
   field (DESC, "Data Det 2")
   field (DOL1, "$(P)$(DET1):sString PP")
   field (DOL2, "$(P)$(DET2):sString PP")
   field (DOL3, "$(P)$(DET3):sString PP")
   field (DOL4, "$(P)$(DET4):sString PP")
   field (DOL5, "$(P)$(DET1):sBGM PP")
   field (DOL6, "$(P)$(DET1):sThrM PP")
   field (DLY2, "0.25")
   field (DLY3, "0.25")
   field (DLY4, "0.25")
   field (DLY5, "0.25")
   field (DLY6, "0.25")
   field (PINI, "YES")
   field (SCAN, "2 second")
}


################# DET 1 ########################

# ACCUMULATED DOSE AND DOSE RATE

record(stringin, "$(P)$(DET1):sString") {
   field (DESC, "Data Det 1")
   field (DTYP, "stream")
   field (INP, "@dpu.proto get_data(1,0x41) $(PORT)")
}

record(ai, "$(P)$(DET1):sDoseRtM") {
   field (DESC, "Dose rate mantissa")
   field (DTYP, "stream")
   field (INP, "@dpu.proto get_dr(1,0x41,$(DET1)) $(PORT)")
   field (SCAN, "I/O Intr")
   field (FLNK, "$(P)$(DET1):sDoseRt")
}

record(mbbi, "$(P)$(DET1):sDoseRtExp") {
   field (DESC, "Dose rate exp")
   field (ZRST, " ")
   field (THST, "K")
   field (SXST, "M")
   field (NIST, "G")
   field (TVST, "T")   
   field (SDIS, "$(P)$(DET1):sDoseRtM NPP MS")
   field (DISV, "-1") # Will never disable, but will propagate severity
}

record(calc, "$(P)$(DET1):sDoseRt") {
   field (DESC, "Dose rate")
   field (INPA, "$(P)$(DET1):sDoseRtM")
   field (INPB, "$(P)$(DET1):sDoseRtExp")
   field (CALC, "A*10^B")
   field (PREC, "2")
   field (FLNK, "$(P)$(DET1):sDetTyp")   
   field (SDIS, "$(P)$(DET1):sDoseRtM NPP MS")
   field (DISV, "-1") # Will never disable, but will propagate severity
}

record(ai, "$(P)$(DET1):sAccDoseM") {
   field (DESC, "Dose Det 1")   
   field (FLNK, "$(P)$(DET1):sAccDose")   
   field (SDIS, "$(P)$(DET1):sDoseRtM NPP MS")
   field (DISV, "-1") # Will never disable, but will propagate severity
}

record(mbbi, "$(P)$(DET1):sAccDoseExp") {
   field (DESC, "Dose det 1 exp")
   field (ZRST, " ")
   field (THST, "K")
   field (SXST, "M")
   field (NIST, "G")
   field (TVST, "T")   
   field (SDIS, "$(P)$(DET1):sDoseRtM NPP MS")
   field (DISV, "-1") # Will never disable, but will propagate severity
}

record(calc, "$(P)$(DET1):sAccDose") {
   field (DESC, "Accumulated dose")
   field (INPA, "$(P)$(DET1):sAccDoseM")
   field (INPB, "$(P)$(DET1):sAccDoseExp")
   field (CALC, "A*10^B")
   field (PREC, "2")   
   field (SDIS, "$(P)$(DET1):sDoseRtM NPP MS")
   field (DISV, "-1") # Will never disable, but will propagate severity
}


record(bo, "$(P)$(DET1):ClrAccDosecmd") {
   field (DESC, "Det 1 Clear accumulated dose")
   #field (DTYP, "stream")
   #field (OUT, "@dpu.proto clr_dos(1) $(PORT)")
}

record(mbbi, "$(P)$(DET1):sDetTyp") {
   field (DESC, "Detector type")
   field (ZRST, "No detector")
   field (ONST, "pm10")
   field (TWST, "pm11")
   field (THST, "ic10")
   field (FRST, "gm10")
   field (FVST, "gm40")
   field (SXST, "gm41")
   field (SVST, "gm42")
   field (EIST, "BF3")
   field (NIST, "42-30H")
   field (TEST, "UR")
   field (ELST, "Berthold")
}

record(bi, "$(P)$(DET1):sOVF") {
   field (DESC, "1 = OVF")
   field (ZNAM, "OK")
   field (ONAM, "OVF")
}

record(mbbi, "$(P)$(DET1):sFail") {
   field (DESC, "4 = FAIL_FLG ")
   field (ZRST, "OK")
   field (FRST, "FAIL_FLG")
}

#  BACKGROUND

record(stringin, "$(P)$(DET1):sStringBG") {
   field (DESC, "Background Det 1")
   field (DTYP, "stream")
   field (INP, "@dpu.proto read_btv(1,0x39) $(PORT)")
   field (SCAN, "I/O Intr")
}

record(ai, "$(P)$(DET1):sBGM") {
   field (DESC, "Background mantissa")
   field (DTYP, "stream")
   field (INP, "@dpu.proto get_btv(1,0x39,$(DET1),:sBG) $(PORT)")
   field (FLNK, "$(P)$(DET1):sBG")
}

record(mbbi, "$(P)$(DET1):sBGExp") {
   field (DESC, "Background exp")
   field (ZRST, " ")
   field (THST, "K")
   field (FVST, "s")
   field (SXST, "M")
   field (NIST, "G")
   field (TVST, "T")  
   field (SDIS, "$(P)$(DET1):sBGM NPP MS")
   field (DISV, "-1") # Will never disable, but will propagate severity
}

record(calc, "$(P)$(DET1):sBG") {
   field (DESC, "Background")
   field (INPA, "$(P)$(DET1):sBGM")
   field (INPB, "$(P)$(DET1):sBGExp")
   field (CALC, "(B=5) ? VAL : A*10^B")
   field (PREC, "2")  
   field (SDIS, "$(P)$(DET1):sBGM NPP MS")
   field (DISV, "-1") # Will never disable, but will propagate severity
}

record(ao, "$(P)$(DET1):BGcSetV") {
   field (DESC, "Threshold set value")
   field (DTYP, "stream")
   field (OUT, "@dpu.proto set_bg(1,2) $(PORT)")
   field (DRVH, "62000")
   field (DRVL, "1")
}

